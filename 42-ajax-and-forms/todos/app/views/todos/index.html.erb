<%#= link_to "Add Todo", new_todo_path %>

<%= form_for @todo do |f| %>
  <%= f.text_field :task, id: 'todo-task', placeholder: 'What needs to be done?' %>
  <%= f.button "Add", type: 'submit', class: 'button-inline' %>
<% end %>

<ul id="todos-list">
  <% @todos.each do |todo| %>
    <%= render todo %>
  <% end %>
</ul>
